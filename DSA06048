#include<bits/stdc++.h>
using namespace std;
int main() {
	int t;
	cin>>t;
	while(t--) {
		int m,n,k;
		cin>>n;
		int a[n],kq=0, ok=0;
		for(int i=0; i<n; i++) {
			cin>>a[i];
		}
		for(int i=1; i<n; i++){
			if(a[i]<a[i-1]){
				cout<<i<<endl;
				ok=1;
				break;
			}
		}
		if(ok==0)cout<<ok<<endl;
	}
}
